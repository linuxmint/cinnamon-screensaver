XSBC-Original-Maintainer: Guilherme de S. Pastore <gpastore@debian.org>
Build-Depends: cdbs,
               debhelper (>= 8.1.0~),
               dh-autoreconf,
               gnome-common,
               gnome-pkg-tools (>= 0.10),
               libdbus-glib-1-dev (>= 0.30),
               libglib2.0-dev (>= 2.15.0),
               libgtk-3-dev (>= 3.0.0),
               libcinnamon-desktop-dev (>= 1.0.0),
               libgnomekbd-dev (>= 2.91.91),
               libxklavier-dev,
               libx11-dev,
               libxt-dev,
               libxext-dev,
               libx11-dev,
               libpam0g-dev,
               x11proto-xext-dev,
               x11proto-scrnsaver-dev,
               libxss-dev,
